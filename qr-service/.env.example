# Server Configuration
NODE_ENV=development
PORT=3005

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/qr-service

# JWT Configuration (same as Auth service)
JWT_SECRET=your-secret-key-here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info

# CORS
CORS_ORIGIN=*

# QR Code
QR_DEFAULT_EXPIRY=86400000
QR_ATTENDANCE_EXPIRY=4000
QR_CLEANUP_INTERVAL=3600000

# Encryption
ENCRYPTION_ALGORITHM=aes-256-cbc
ENCRYPTION_KEY=your-32-byte-key-as-hex-here
ENCRYPTION_IV=your-16-byte-iv-as-hex-here

# Services
ATTENDANCE_SERVICE_URL=http://localhost:3004
BIOMETRIC_SERVICE_URL=http://localhost:3006
INTERNAL_API_KEY=your-internal-api-key-here