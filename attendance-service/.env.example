# Server Configuration
NODE_ENV=development
PORT=3004

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/attendance-service

# JWT Configuration (same as Auth service)
JWT_SECRET=your-secret-key-here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info

# CORS
CORS_ORIGIN=*

# QR Code
QR_EXPIRY_SECONDS=4
QR_REFRESH_INTERVAL=4000

# Attendance Window (minutes)
ATTENDANCE_WINDOW_BEFORE=15
ATTENDANCE_WINDOW_AFTER=15